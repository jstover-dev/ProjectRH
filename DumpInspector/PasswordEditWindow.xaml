<Window x:Class="ProjectRH.DumpInspector.PasswordEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Administrator Login"
        Width="400" WindowStyle="ToolWindow"
        Height="Auto" SizeToContent="Height"
        MinHeight="150"
        MaxHeight="150" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <Grid>
            <Label Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="18,0,0,0"/>
            <Label Content="Password" Margin="0,22,0,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="60"/>
            <TextBox x:Name="Username" Margin="63,4,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <TextBox x:Name="Password" Margin="63,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        </Grid>
        <Grid Margin="0,10,0,0">
            <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Right" Width="75" Height="20" VerticalAlignment="Bottom" IsCancel="True" />
            <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Right" Width="75" IsDefault="True" Margin="0,0,90   ,0" Click="SaveButton_Click"/>
        </Grid>

    </StackPanel>
</Window>
