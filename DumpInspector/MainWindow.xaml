<Window x:Class="ProjectRH.DumpInspector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:self="clr-namespace:ProjectRH.DumpInspector"
        Title="Ricoh NVRAM Reader" Width="300"
        SizeToContent="WidthAndHeight" Loaded="Window_Loaded" ResizeMode="NoResize" MinWidth="300" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" Icon="/ProjectRH.DumpInspector;component/ricoh_32x32.ico">
    
    <Window.CommandBindings>
        <CommandBinding Command="self:Commands.Open"   Executed="OpenCommand_Executed" />
        <CommandBinding Command="self:Commands.Exit"   Executed="ExitCommand_Executed" />
        <CommandBinding Command="self:Commands.Export" Executed="ExportCommand_Executed" CanExecute="ExecutionDisabled" />
        <CommandBinding Command="self:Commands.Clear"  Executed="ClearCommand_Executed" CanExecute="ExecuteIfFileOpen"  />
    </Window.CommandBindings>
    
    <DockPanel LastChildFill="True">
        
        <Menu IsMainMenu="True" VerticalAlignment="Top" DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open NVRAM..." Command="self:Commands.Open" />
                <MenuItem Header="_Export..." Command="self:Commands.Export"/>
                <Separator />
                <MenuItem Header="E_xit" Command="self:Commands.Exit"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Clear Passwords" Command="self:Commands.Clear" />
            </MenuItem>
        </Menu>

        <StatusBar Name="statusBar1" DockPanel.Dock="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>

            <StatusBarItem Grid.Column="0" Name="firmwareMessage" Foreground="#00F" HorizontalContentAlignment="Left">Ready</StatusBarItem>
            <StatusBarItem Grid.Column="1" />
            <StatusBarItem Grid.Column="2" Name="statusMessage" ></StatusBarItem>
            

        </StatusBar>
        
        
        <DataGrid Name="dataGrid"
                  AutoGenerateColumns="True" AutoGeneratedColumns="dataGrid_AutoGeneratedColumns"
                  CanUserReorderColumns="False" CanUserResizeColumns="False"
                  CanUserSortColumns="False" CanUserResizeRows="False"
                  CanUserAddRows="False" AreRowDetailsFrozen="True"
                  ColumnWidth="Auto" HeadersVisibility="None" MinColumnWidth="90" AlternatingRowBackground="#F9F9F9" IsReadOnly="True" SelectionMode="Single" SelectionUnit="Cell" GridLinesVisibility="None" BorderThickness="0" FontFamily="Segoe UI">
                
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Width="90" Padding="0" Click="EditPassword" HorizontalAlignment="Stretch">Edit</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
    </DockPanel>
</Window>
